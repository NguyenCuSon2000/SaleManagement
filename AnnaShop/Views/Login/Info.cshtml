
@{
    ViewBag.Title = "Info";
    Layout = "~/Views/Shared/_Layout3.cshtml";
}

<div class="col-sm-9 mt-30" style="padding: 2.5em 0 0 10em;"  ng-controller="LoginController">
    <div class="row">
        <div class="col-md-6">
            <h4>Hồ sơ của tôi</h4>
            <form class="form" action="#">
                <table class="table no-border">
                    <tbody>
                        <tr>
                            <td><input type="text" class="form-control" placeholder="Nhập họ tên" ng-model="name" value="{{User.Name}}"></td>
                        </tr>
                        <tr>
                            <td><input type="text" class="form-control" placeholder="Nhập ngày sinh" ng-model="birth" value="{{User.DateOfBirth}}"></td>
                        </tr>
                        <tr>
                            <td><input type="text" class="form-control" placeholder="Nhập địa chỉ" value="{{User.Address}}"></td>
                        </tr>
                        <tr>
                            <td><input type="email" class="form-control" placeholder="Nhập email" ng-model="mail" value="{{User.Email}}"></td>
                        </tr>
                        <tr>
                            <td><input type="text" class="form-control" placeholder="Nhập số điện thoại" value="{{User.Phone}}"></td>
                        </tr>
                    </tbody>
                </table>
                <button class="btn btn-primary" style="margin-left: 20em;" ng-click="update()">Cập nhật</button>
            </form>
        </div>
    </div>
</div> <!-- info customer-->