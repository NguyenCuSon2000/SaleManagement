
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout2.cshtml";
}

<article class="login">
    <section class="login-area">
        <div class="container">
            <div class="row">
                <div class="col-sm-6 col-sm-offset-3">
                    <form name="form" action="#" class="learnpro-register-form text-center" role="form" ng-controller="LoginController">
                        <p class="lead">chào Mừng bạn trở lại</p>
                        <div class="form-group" ng-class="{ 'has-error': form.username.$dirty && form.username.$error.required }">
                            <input class="required form-control" placeholder="Username *" name="username" type="text" ng-model="uid" required>
                            <span ng-show="form.username.$dirty && form.username.$error.required" class="help-block">Username không được để trống</span>
                        </div>
                        <div class="form-group" ng-class="{ 'has-error': form.password.$dirty && form.password.$error.required }">
                            <input class="required form-control" placeholder="Password *" name="password" type="password" ng-model="pwd" required>
                            <span ng-show="form.password.$dirty && form.password.$error.required" class="help-block">Password không được để trống</span>
                        </div>
                        <div class="form-group register-btn">
                            <submit ng-disabled="form.$invalid || vm.dataLoading" class="btn btn-primary btn-lg" ng-click="login()">Đăng nhập</submit>
                        </div>

                        <a href="forgot_password.html"><strong>Quên mật khẩu?</strong></a>
                        <p>Chưa có tài khoản? <a ng-href="/Login/Register"><strong>Đăng ký ngay</strong></a></p>

                        Login with &nbsp;
                        <a ng-href="/Login/LoginWithFb"><i class="fa fa-facebook" style="font-size:130%; padding:0.5em 0.85em; background-color: #3b5998; color: white;"></i></a>
                        <a ng-href="/Login/LoginWithFb"><i class="fa fa-google" style="font-size:130%; padding:0.5em 0.75em; background-color: #dd4b39; color: white;"></i></a>
                    </form>
                </div>
            </div>
        </div>
    </section>
</article>

