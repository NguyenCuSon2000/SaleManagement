
@{
    ViewBag.Title = "Register";
    Layout = "~/Views/Shared/_Layout2.cshtml";
}

<article class="register">
    <section class="register-area">
        <div class="container">
            <div class="row">
                <div class="col-sm-6 col-sm-offset-3">
                    <form name="form" action="#" class="learnpro-register-form text-center" role="form" ng-controller="LoginController">
                        <p class="lead">Tạo một tài khoản mới</p>
                        <div class="form-group">
                            <input autocomplete="off" class="form-control" placeholder="Họ tên" type="text" ng-model="name">
                        </div>
                        <div class="form-group" ng-class="{ 'has-error': form.username.$dirty && form.username.$error.required }">
                            <input class="required form-control" placeholder="Tên tài khoản *" name="username" type="text" ng-model="uid" required>
                            <span ng-show="form.username.$dirty && form.username.$error.required" class="help-block">Username không được để trống</span>
                        </div>
                        <div class="form-group" ng-class="{ 'has-error': form.password.$dirty && form.password.$error.required }">
                            <input class="required form-control" placeholder="Mật khẩu *" name="password" type="password" ng-model="pwd" required>
                            <span ng-show="form.password.$dirty && form.password.$error.required" class="help-block">Password không được để trống</span>
                        </div>
                        <div class="form-group" ng-class="{ 'has-error': form.rpassword.$dirty && form.rpassword.$error.required }">
                            <input class="required form-control" placeholder="Nhập lại mật khấu *" name="rpassword" type="password" ng-model="rpwd" required>
                            <span ng-show="form.rpassword.$dirty && form.rpassword.$error.required" class="help-block">Password không trùng khớp</span>
                        </div>
                        <div class="form-group">
                            <input class="form-control" placeholder="Phone" name="phone" type="text" ng-model="phone">
                        </div>
                        <div class="form-group">
                            <input class="form-control" placeholder="Email" name="mail" type="email" ng-model="mail">
                        </div>
                        <div class="form-group register-btn">
                            <submit ng-disabled="form.$invalid || vm.dataLoading" class="btn btn-primary btn-lg" ng-click="register()">Register</submit>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </section>
</article>